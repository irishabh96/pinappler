<%- contentFor('content') %>
<div class="container-fluid">
	
	<div class="col-md-4">
		<div>
			<h1>Edit <%- data.websiteName %></h1>
			<hr>
			<form action="/admin/websites/edit/<%- data.websiteUrl %>" method="POST">
				<div class="form-group">
					<label for="websiteName">Website Name</label>
	         		<input type="text" class = "form-control" name="websiteName" value="<%- data.websiteName %>" ><br>
        		</div>
        		<div class="form-group">
        			<label for="websiteUrl">Website Url</label>
					<input type="text" class ="form-control" name="websiteUrl" value="<%- data.websiteUrl %>">
        		</div>
        		<div class="form-group">
        			<label for="scrappingMethod">Scraping Method</label>
					<input type="text" class ="form-control" name="scrappingMethod" value="<%- data.scrappingMethod %>">
        		</div>
        		<div>
        			<input class="btn btn-default" type="submit" name="submit">
        		</div>
			</form>
		</div>
	</div> <!-- row-->	
</div> <!-- container -->
