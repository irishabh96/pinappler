<%- contentFor('content') %>
<div class= "container">
	<div>
    	<h1>All pages</h1>
      <hr>
    <table class="table table-inverse col-md-10">
      <thead>
        <tr>
          <% if(thead){ %>
            <% thead.forEach(function(item,index){ %>
          	<th><%-item%></th>
            <% }) %>
          <% } %>
          
        </tr>
      </thead>
      <tbody>
      	<% if(data.length > 0){ %>
          <% data.forEach(function(item, index){ %>
            <tr>
              <td><%- item.name%></td>
              <td><%- item.title%></td>
              <td><%- item.slug%></td>
              <td>
                <a href="/admin/edit/<%- item.slug%>"><span class="glyphicon glyphicon-check"></span></a>
                <a href="/admin/edit/<%- item.slug%>/delete"><span class="glyphicon glyphicon-remove-circle"></span></a>
              </td>
          </tr> 
         <% }) %>
            
      <% } %>
      </tbody>
    </table>

  </div>

</div>
